@page
@model Handymen_UI_Consumer.Pages.IndexPageModel

@{
    ViewData["Title"] = "Home";
}
<link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      .b-example-divider {
        height: 3rem;
        background-color: rgba(0, 0, 0, .1);
        border: solid rgba(0, 0, 0, .15);
        border-width: 1px 0;
        box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
      }

      .b-example-vr {
        flex-shrink: 0;
        width: 1.5rem;
        height: 100vh;
      }

      .bi {
        vertical-align: -.125em;
        fill: currentColor;
      }

      .nav-scroller {
        position: relative;
        z-index: 2;
        height: 2.75rem;
        overflow-y: hidden;
      }

      .nav-scroller .nav {
        display: flex;
        flex-wrap: nowrap;
        padding-bottom: 1rem;
        margin-top: -1px;
        overflow-x: auto;
        text-align: center;
        white-space: nowrap;
        -webkit-overflow-scrolling: touch;
      }
    </style>
<!--The greeting / Welcome section-->
<div class="text-center shadow-sm bg-light p-3 mb-5 rounded">
    <H2>Welcome To Handymen</H2>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-boombox-fill" viewBox="0 0 16 16">
        <path d="M14.5.5a.5.5 0 0 0-1 0V2H1a1 1 0 0 0-1 1v2h16V3a1 1 0 0 0-1-1h-.5V.5ZM2.5 4a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1Zm2 0a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1Zm7.5-.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0Zm1.5.5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1Zm-7-1h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1 0-1Zm-2 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3Zm.5-1.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0Zm6.5 1.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3Zm0-1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1Z" />
        <path d="M16 6H0v8a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V6ZM4.5 13a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5Zm7 0a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5Z" />
    </svg>
</div>
<!--End Section-->

<div class="row p-3 m-1">
    <!--SearchBar-->     
            <form>
                
<!--<select asp-for="category" asp-items="Model.serviceCategorySelectList">
                 <option value="default">All</option>
                </select>-->

                    <div class="input-group">
                      <input type="text" class="form-control" asp-for="searchString" placeholder="Search here..." aria-label="Search for services">
                      <button class="btn btn-outline-success shadow-sm bg-light" type="submit">Filter</button>
                      <button class="btn btn-outline-danger shadow-sm bg-light" type="reset">Reset</button>
                      <br/>
                      <hr/>
                    </div>
            </form>   
    <!--End SearchBar-->
</div>

<div class="row justify-content-center alert-heading text-capitalize p-2 m-1 text-center">
    <h4>
        Available Services
    </h4>

</div>
<!--lIST OF SERVICES-->
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @if(Model is null)
        {
            <div class="h2">
                 <p class="placeholder-glow">
                 <span class="placeholder col-12">@Model?.ErrorMsg...</span>
                 </p>
                </div>
            }
            else
            {
                @foreach (var item in Model.ServiceList)
                {
                    
        <div class="col">
            <div class="card shadow-sm">
            <img src="~/Images/@item.ImageUrl"  class="bd-placeholder-img card-img-top" width="100%" height="225"/><title>@item.Name</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">@item.CategoryName</text>
            <div class="card-body">
              <p class="card-text">@item.Description</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a  asp-page="./Details" class="btn btn-sm btn-outline-secondary" asp-route-id="@item.Id">Details</a>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
            }
        }
      </div>
    </div>
  </div>



<!--Carousel-->


<div class="jumbotron">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        
        <div class="carousel-item active">
            <div class="card bg-dark text-white text-center">
                    <img src="~/Images/grass.jpg" class="img-fluid h-25"  alt="...">
                <div class="carousel-caption card-img-overlay d-none d-md-block">
                <h2>Garderning </h2>
                <strong>I guess it's your surprice  50 but we can FixiTup</strong>
            </div>
            </div>
          </div>
        
        <div class="carousel-item">
            <div class="card bg-dark text-black text-center">
            <img src="~/Images/ac.jpg" class="d-block w-100 " alt="...">
                <div class="carousel-caption card-img-overlay d-none d-md-block">
                <h2>Electronics</h2>
                <strong>Eletronics Service  auto Description</strong>
            </div>
           </div>
        </div>
        <div class="carousel-item">
            <div class="card bg-dark text-black text-center">
            <img src="~/Images/oven.jpg" class="d-block w-100 "  alt="...">
            <div class="carousel-caption card-img-overlay d-none d-md-block">
                <h2>Electronics</h2>
                <strong>Electronics  Service  25 Description</strong>
            </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
</div>
<hr/>


<!--End Carousel-->

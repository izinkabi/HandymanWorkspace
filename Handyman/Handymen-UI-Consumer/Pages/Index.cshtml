            <h5 class="card-title">@Html.DisplayFor(model => item.Name)</h5>     
           <br/>

            
           @Html.DisplayFor(modelItem => item.Description)<br/>

            
            @Html.DisplayFor(modelItem => item.CategoryName)<br/>

            
            @Html.DisplayFor(modelItem => item.CategoryDescription)<br/>

           <br/>
            
                  

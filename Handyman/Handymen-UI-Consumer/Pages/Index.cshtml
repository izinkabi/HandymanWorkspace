</div>
<!--End Section-->



<!--Carousel-->


<div class="jumbotron">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        
        <div class="carousel-item active">
            <div class="card bg-dark text-white text-center">
                    <img src="~/Images/grass.jpg" class="img-fluid h-25"  alt="...">
                <div class="carousel-caption card-img-overlay d-none d-md-block">
                <h2>Garderning </h2>
                <strong>I guess it's your surprice  50 but we can FixiTup</strong>
            </div>
            </div>
          </div>
        
        <div class="carousel-item">
            <div class="card bg-dark text-black text-center">
            <img src="~/Images/ac.jpg" class="d-block w-100 " alt="...">
                <div class="carousel-caption card-img-overlay d-none d-md-block">
                <h2>Electronics</h2>
                <strong>Eletronics Service  auto Description</strong>
            </div>
           </div>
        </div>
        <div class="carousel-item">
            <div class="card bg-dark text-black text-center">
            <img src="~/Images/oven.jpg" class="d-block w-100 "  alt="...">
            <div class="carousel-caption card-img-overlay d-none d-md-block">
                <h2>Electronics</h2>
                <strong>Electronics  Service  25 Description</strong>
            </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
</div>
<hr/>


<!--End Carousel-->




<div class="row justify-content-center alert-heading text-capitalize p-2 m-1 text-center">
    <h4>
        Available Services
    </h4>

</div>

<div class="row p-3 m-1">
    <!--SearchBar-->     
            <form>
                
<!--<select asp-for="category" asp-items="Model.serviceCategorySelectList">
                 <option value="default">All</option>
                </select>-->

                    <div class="input-group">
                      <input type="text" class="form-control" asp-for="searchString" placeholder="Search here..." aria-label="Search for services">
                      <button class="btn btn-outline-success shadow-sm bg-light" type="submit">Filter</button>
                      <button class="btn btn-outline-danger shadow-sm bg-light" type="reset">Reset</button>
                      <br/>
                      <hr/>
                    </div>
            </form>   
    <!--End SearchBar-->
</div>


<hr/>

<!--List of Services-->


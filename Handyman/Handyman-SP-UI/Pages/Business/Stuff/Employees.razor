@page "/employees"
@page "/stuff"
@using Handyman_SP_UI.Helpers
@using Handyman_SP_UI.Models

@inject IEmployeeHelper employeeHelper

  <div class="d-flex align-items-center p-3 my-3 text-white bg-purple rounded shadow-sm">

      <p class="pb-3 mb-0 small lh-sm border-bottom">
        <strong class="d-block text-gray-dark">@rating.review</strong>
        @rating.recommnedation
      </p>
    </div>
    <small class="d-block text-end mt-3">
      <a href="#">More</a>
    </small>
  </div>
}


    </small>
  </div>


@code {
    DisplayEmployeeModel displayEmployee;

    protected override async Task OnInitializedAsync()
    {
        var displayStuff = await employeeHelper.LoadEmployee();

        displayEmployee = new();
        displayEmployee.Id = displayStuff.employeeId;
        foreach (var rate in displayStuff.ratings)
        {
            DispalyRatingsModel ratings = new();
            ratings.Id = rate.Id;
            ratings.stars = rate.stars;
            ratings.review = rate.review;
            ratings.recommnedation = rate.recommnedation;
            displayEmployee.Ratings.Add(ratings);
        }
    }

}

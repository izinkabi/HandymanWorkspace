@page
@model Handyman_SP_UI.Areas.Identity.Pages.Account.WorkShopEmployerModel

<h2 class="shadow rounded-3">Join a Work Shop</h2>

@if (Model.Errors != null && Model.Errors.Count>0)
{
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </symbol>
        <symbol id="info-fill" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
        </symbol>
        <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </symbol>
    </svg>
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
        <div>
            @foreach (var error in Model.Errors)
            {
                <p class="text-danger mb-auto">
                    @error, click <a data-bs-toggle="modal" data-bs-target="#workShopJoinModal">here</a>to try again
                </p><br/>
            }
        </div>
    </div>
      
}

@if(!Model.IsBusinessFound)
{
    <!--Work Shop Join Form-->
    <form class="row g-3 border-success bg-light shadow m-auto" asp-page-handler="FindWorkShop" method="post">
        @Html.AntiForgeryToken()
        <div class="col-6 m-3">
            <label for="userEmail" class="fst-italic text-black-50 text-center">Username</label>
            <input type="text" readonly class="form-control-plaintext border-success" id="userEmail" value="@User.Identity.Name">
        </div>
        <hr />
        <div class="col-3 m-3">

            <label for="searchString" class="form-label fst-italic text-black-50 text-center" data-bs-custom-class="custom-tooltip"
                   data-bs-title="A Work Shop Registration Number, the so called 'RN'">Work Shop Reg'Number</label>
            <input class="form-control border-success text-center" asp-for="@Model.WorkShopRegistrationNumber" id="searchString" placeholder="- - - -">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           @* <datalist class="list-group" id="datalistOptions">
                @foreach(var workshop in Model.WorkShopListProperty)
                {
                    <option value="@workshop.Name"/>   
                }
            </datalist>*@
        </div>
        <hr/>
        <div class="col-3 m-3">
            <button type="submit" class="btn btn-primary mb-3">Find</button>
        </div>
    </form>
}
else
{
    @if (Model.NewMemberProperty is not null && Model.NewMemberProperty.BusinessId > 0)
    {
        <!--Alert for new Membership-->
        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
            <symbol id="check-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </symbol>
            <symbol id="info-fill" viewBox="0 0 32 32">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
            </symbol>
            <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </symbol>
        </svg>
        <div class="alert alert-primary d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-2 me-2" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
            <div>
                <p>Hey <strong> @Model.NewMemberProperty.employeeProfile.Names,</strong> you can click
                @if (Model.IsJoinedMember)
                {
                    <a data-bs-toggle="modal"
                       data-bs-custom-class="custom-tooltip"
                       data-bs-title="There is a new Work Shop On-Creation"
                       data-bs-target="#workShopJoinModal">
                       here to
                   </a>
                }
                else
                {
                    <a class="link link-success px-2"
                            data-bs-custom-class="custom-tooltip"
                            data-bs-title="There is a new Work Shop On-Creation" 
                            data-bs-toggle="modal" data-bs-target="#workShopJoinModal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard2-plus-fill" viewBox="0 0 16 16">
                                <path d="M10 .5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5.5.5 0 0 1-.5.5.5.5 0 0 0-.5.5V2a.5.5 0 0 0 .5.5h5A.5.5 0 0 0 11 2v-.5a.5.5 0 0 0-.5-.5.5.5 0 0 1-.5-.5Z" />
                                <path d="M4.085 1H3.5A1.5 1.5 0 0 0 2 2.5v12A1.5 1.5 0 0 0 3.5 16h9a1.5 1.5 0 0 0 1.5-1.5v-12A1.5 1.5 0 0 0 12.5 1h-.585c.055.156.085.325.085.5V2a1.5 1.5 0 0 1-1.5 1.5h-5A1.5 1.5 0 0 1 4 2v-.5c0-.175.03-.344.085-.5ZM8.5 6.5V8H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V9H6a.5.5 0 0 1 0-1h1.5V6.5a.5.5 0 0 1 1 0Z" />
                            </svg>
                        
                    </a>
                  
                }

                your Membership and accept the terms and conditions. </p>

            </div>
        </div>
        
        <!--Service Registration-->
        <div class="modal" id="wJRegServiceToggle" aria-hidden="true" aria-labelledby="wJRegServiceToggleLabel" tabindex="-">
            <div class="modal-dialog modal-fullscreen-xxl-down">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="wJRegServiceToggleLabel">Register Services</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (!Model.IsServiceAdded)
                        {
                            <!--Services To Add in Work Shop-->
                            <div class="row">
                                <div class="col">
                                      <h4 class="font-monospace text-center shadow rounded-3">
                                            Pick a Service
                                    </h4>
                                    <div class="row d-flex">
                                        <div class="col">

                                            @if (Model.ServicesList != null)
                                            {
                                                <div class="list-group w-auto shadow">
                                                    @if (Model.ServicesList.Count == 0)
                                                    {
                                                        <div>
                                                            <p>Loading...</p>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <form asp-page-handler="saveservices" method="post">
                                                            <div class="list-group text-center" style="height:250px;overflow-y:scroll">
                                                                @foreach (var service in Model.ServicesList)
                                                                {
                                                                    <input name="Selecteds" type="checkbox" value="@service.id" />
                                                                    @service.name <br />
                                                                }
                                                            </div>
                                                            <hr/>
                                                            <button class="btn btn-primary btn-outline-light p-3 m-3">Save</button>
                                                        </form>
                                                    }
                                                </div>
                                            }
                                            <hr />

                                            <!--End provider's added services-->
                                        </div>
                                    </div>
                                    

                                </div>
                                <!--End Services-->

                            </div>
                            <!--End Services Add-->
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--End Service Registration-->
        @if (Model.IsOnSelectService)
        {
            <div class="col-auto">

                <button class="btn btn-secondary mb-3 rounded-3 shadow float-end" data-bs-toggle="modal" data-bs-target="#wJRegServiceToggle">
                   <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-minecart" viewBox="0 0 16 16">
                      <path d="M4 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2zm0 1a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm8-1a1 1 0 1 1 0-2 1 1 0 0 1 0 2zm0 1a2 2 0 1 0 0-4 2 2 0 0 0 0 4zM.115 3.18A.5.5 0 0 1 .5 3h15a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 14 12H2a.5.5 0 0 1-.491-.408l-1.5-8a.5.5 0 0 1 .106-.411zm.987.82 1.313 7h11.17l1.313-7H1.102z"/>
                   </svg>
                    | Add Services to Deliver
                </button>
            </div>
        }
        else
        {
            <div class="col-auto">
                <span class="badge text-bg-white"></span>
                <button class="btn btn-secondary mb-3" data-bs-toggle="modal" data-bs-target="#workShopJoinModal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard2-plus-fill" viewBox="0 0 16 16">
                        <path d="M10 .5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5.5.5 0 0 1-.5.5.5.5 0 0 0-.5.5V2a.5.5 0 0 0 .5.5h5A.5.5 0 0 0 11 2v-.5a.5.5 0 0 0-.5-.5.5.5 0 0 1-.5-.5Z" />
                        <path d="M4.085 1H3.5A1.5 1.5 0 0 0 2 2.5v12A1.5 1.5 0 0 0 3.5 16h9a1.5 1.5 0 0 0 1.5-1.5v-12A1.5 1.5 0 0 0 12.5 1h-.585c.055.156.085.325.085.5V2a1.5 1.5 0 0 1-1.5 1.5h-5A1.5 1.5 0 0 1 4 2v-.5c0-.175.03-.344.085-.5ZM8.5 6.5V8H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V9H6a.5.5 0 0 1 0-1h1.5V6.5a.5.5 0 0 1 1 0Z" />
                    </svg>
              
                </button>
            </div>
        }
    }
}
<!--Join WorkShop Modal -->
    <div class="modal fade" id="workShopJoinModal" tabindex="-1" aria-labelledby="workShopJoinModal" aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
            
                <div class="modal-body">
                    @if (Model.WorkShopProperty.Employees.Count > 0)
                    {
                        <div class="card">
                            <div class="card-header">
                                @Model.WorkShopProperty.Name
                            </div>
                            <div class="card-body">
                                <blockquote class="blockquote mb-0">
                                    <p>@Model.WorkShopProperty.Description</p>
                                <footer class="blockquote-footer">
                                    <p>@Model.WorkShopProperty.registration.regNumber </p>
                                        <cite title="Source Title">@Model.WorkShopProperty.address.add_state,@Model.WorkShopProperty.address.add_city</cite>
                                    </footer>
                                </blockquote>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <strong>Loading...</strong>
                            <div class="spinner-border ms-auto" role="status" aria-hidden="true"></div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
              
                @if (Model.IsServiceAdded)
                {
                    <form asp-page-handler="submitjoin" method="post" data-bs-toggle="modal" data-bs-target="#workShopJoinModal">
                        <button type="submit" class="btn btn-primary text-center">Join</button>
                    </form>
                }
               
                
                </div>
            </div>
        </div>
    </div>
<!--End Join Modal-->
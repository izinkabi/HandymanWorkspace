@code {


    private List<string> Errors = new List<string>();
    private ServiceModel? Service { get; set; }

    [Parameter]
    [SupplyParameterFromQuery(Name ="SID")]
    public int Id { get; set; }

    protected override async void OnInitialized()
    {

        if (Id == null || _serviceEndPoint == null)
        {
            Errors.Add("Invalid Service");
            return;
        }

        List<ServiceModel> services = await _serviceEndPoint.GetServices();
        foreach (var service in services)
        {
            if (service == null)
            {
                Errors.Add("Service Not Available");
                return;
            }
            else if (service.id == Id)
            {
                Service = new();
                Service = service;
            }

        }

    }


}

<div class="container" >


    <head>
        <title>Bootstrap Example</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <style>
            /*Modal for displaying a group of services*/
            .modal-header, h4, .close {
                background-color: #5cb85c;
                color: white !important;
                text-align: center;
                font-size: 30px;
            }

            .modal-footer {
                background-color: #f9f9f9;
            }


            /* Set height of the grid so .sidenav can be 100% (adjust if needed) */
            .row.content {
                height: 1500px
            }

            /* Set gray background color and 100% height */


            /* Set black background color, white text and some padding */
            footer {
                background-color: #555;
                color: white;
                padding: 15px;
            }

            h3, h4 {
                margin: 10px 0 30px 0;
                letter-spacing: 10px;
                font-size: 20px;
                color: #111;
            }

            /* On small screens, set height to 'auto' for sidenav and grid */

        </style>
    </head>

    <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
        @*Indicators*@
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        @*Wrapper for slides*@

        @*These are wrapped in cards*@
        <div class=" container carousel-inner ">
            <div class="item active card img-fluid ">
                <img src="~/img/background.jpg" class="card-img-top" style="height:500px; width:1200px" />
                <div class="card-img-overlay">
                    <h4 class="card-title">Indoor and outdoor</h4>
                    <p class="card-text">Handyman is a service provider with repairs of anything indoor and outside </p>
                    <a href="#" class="btn btn-danger">View Service</a>
                </div>
            </div>

            <div class="item">
                <img src="~/img/background2.jpg" class="card-img-top" style="height:500px; width:1200px" />
                <div class="card-img-overlay">
                    <h4 class="card-title">Mechanics</h4>
                    <p class="card-text">Anything mechanic is in our repair list and there is a Handyman for it</p>
                    <a href="#" class="btn btn-danger">View Service</a>
                </div>
            </div>

            <div class="item">
                <img src="~/img/plumbli-slide1.png" class="card-img-top" style="height:500px; width:1200px" />
                <div class="card-img-overlay">
                    <h4 class="card-title">Plumbing</h4>
                    <p class="card-text">
                        You need plumbing?<br />
                        Well there's a Handyman for that
                    </p>
                    <a href="#" class="btn btn-danger">View Service</a>
                </div>
            </div>
        </div>
        @*Left and right controls*@
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


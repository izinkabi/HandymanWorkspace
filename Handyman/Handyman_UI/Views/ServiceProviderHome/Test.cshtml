@model IEnumerable<Handyman_UI.Models.ServiceDisplayModel>


<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.ServiceDescription)
        </th>
        <th>
           <strong>Image</strong>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDescription)
        </td>
        <td>
            <img src="@{@item.ImageUrl}" style="width: 150px; height: 90px;"/>
           
        </td>
        <td>
            @Html.ActionLink("Add my service", "AddNewProviderService", new { id=item.Id },new { @class="btn"}) 
          
        </td>
    </tr>
}

</table>

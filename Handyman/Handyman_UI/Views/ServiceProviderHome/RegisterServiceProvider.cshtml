@model Handyman_UI.Models.ServiceProviderDisplayModel

@{
    ViewBag.Title = "Registering Service Provider";
}

<h2 class="text-center">Service Provider Registration</h2>


@using (Html.BeginForm("RegisterServiceProvider", "ServiceProviderHome", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.serviceProviderTypes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ServiceProviderTypesId, Model.serviceProviderTypes, new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.serviceProviderTypes, "", new { @class = "text-danger" })
            @ViewBag.MessageService
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ServicesSelectList, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedServiceId, Model.ServicesSelectList, new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.ServicesSelectList, "", new { @class = "text-danger" })
            @ViewBag.MessageService
        </div>
    </div>
       <hr/>

    @*<div>

        @Html.Partial("CreateAProfile",Model.Profile)

    </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Be handyman" class="btn btn-default" />
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

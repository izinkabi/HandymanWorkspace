@model HandymanUIApp.Models.OrderModel

@{
    ViewData["Title"] = "Create Order";
}

<h1>Confirm Service Order</h1>

<div>
    <h4>Selected Order</h4>
    <hr />

    <dl class="row">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="./Images/@{@Model.ServiceImageUrl}" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.ServiceName)</h5>
                <p class="card-text"> @Html.DisplayFor(model => model.Description).</p>
                <p class="card-text"><small class="text-muted"> @Html.DisplayFor(model => model.Date)</small></p>
              </div>
            </div>
          </div>
        </div>

    </dl>
   
</div>

    <a asp-controller="Services" asp-action="Details" asp-route-id="@Model.ServiceId" class="btn btn-outline-secondary">Back Order</a> |
     <a asp-controller="Orders" asp-action="ConfirmOrder" class="btn btn-outline-success">Confirm</a>



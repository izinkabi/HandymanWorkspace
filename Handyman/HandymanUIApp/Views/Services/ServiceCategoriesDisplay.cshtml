@model IEnumerable<HandymanUIApp.Models.ServiceCategoryModel>

@{
    ViewData["Title"] = "Service Categories Page";
}

 <div class="col-10 justify-content-end inline-flex text-center ">
    <h2>Available Service Categories</h2>
</div>

<!--ScrollSpy-->
<div id="list-categories" class="justify-content-start list-group sticky-top d-inline-flex row-cols-2 ">
    
    @foreach(var item in Model)
    {   
        <a class="list-group-item list-group-item-action bg-gradient " href="#list-item-@{@item.CategoryId}">@item.CategoryName</a>
    }

</div>

<div class="row">

<div class="col-2"></div>
<div data-bs-spy="scroll" data-bs-target="#list-categories" data-bs-offset="0" class="col-10 justify-content-end" tabindex="0">

  @foreach(var item in Model)
  {
        <hr/>
       
        <h4 id="list-item-@{@item.CategoryId}">@item.CategoryName</h4>
        <p>@item.CategoryDescription</p>
       


      <div class="container-fluid row">
          @foreach (var serviceitem in item.Services)
          {
      
            <div class="col-3 card table-hover" >
                 <img src="./Images/@{@serviceitem.ImageUrl}"  class="card-img-top" style="width: auto; height:100px"/>
                  <div class="p-3 border bg-light card-body">

                        <h5 class="card-title">@Html.DisplayFor(model => serviceitem.Name)</h5>     
                       <br/>

            
                       @Html.DisplayFor(modelItem => serviceitem.Description)<br/>

            
                        @Html.DisplayFor(modelItem => serviceitem.CategoryName)<br/>

            
                        @Html.DisplayFor(modelItem => serviceitem.CategoryDescription)<br/>

                       <br/>
            
                  
                                <p><a asp-action="Edit" asp-route-id="@serviceitem.Id">  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tools" viewBox="0 0 16 16">
                                <path d="M1 0 0 1l2.2 3.081a1 1 0 0 0 .815.419h.07a1 1 0 0 1 .708.293l2.675 2.675-2.617 2.654A3.003 3.003 0 0 0 0 13a3 3 0 1 0 5.878-.851l2.654-2.617.968.968-.305.914a1 1 0 0 0 .242 1.023l3.27 3.27a.997.997 0 0 0 1.414 0l1.586-1.586a.997.997 0 0 0 0-1.414l-3.27-3.27a1 1 0 0 0-1.023-.242L10.5 9.5l-.96-.96 2.68-2.643A3.005 3.005 0 0 0 16 3c0-.269-.035-.53-.102-.777l-2.14 2.141L12 4l-.364-1.757L13.777.102a3 3 0 0 0-3.675 3.68L7.462 6.46 4.793 3.793a1 1 0 0 1-.293-.707v-.071a1 1 0 0 0-.419-.814L1 0Zm9.646 10.646a.5.5 0 0 1 .708 0l2.914 2.915a.5.5 0 0 1-.707.707l-2.915-2.914a.5.5 0 0 1 0-.708ZM3 11l.471.242.529.026.287.445.445.287.026.529L5 13l-.242.471-.026.529-.445.287-.287.445-.529.026L3 15l-.471-.242L2 14.732l-.287-.445L1.268 14l-.026-.529L1 13l.242-.471.026-.529.445-.287.287-.445.529-.026L3 11Z"/>
                                </svg></a> |
                                <a asp-action="Details" asp-route-id="@serviceitem.Id">Details</a> 
                   
                  </div>
            </div>
                        
      
        }

      </div>

  }
 
</div>

</div>
